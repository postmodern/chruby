#!/usr/bin/env bash

case "$1" in
	-h|--help)
		echo "usage: chruby-exec RUBY [RUBYOPTS] -- COMMAND"
		exit
		;;
	-v|--version)
		echo "chruby version 0.3.2"
		exit
		;;
esac

if [[ $# -eq 0 ]]; then
	echo "chruby-exec: RUBY and COMMAND required" >&2
	exit 1
fi

argv=()

for arg in $@; do
	shift

	if [[ "$arg" == "--" ]]; then break
	else                          argv+=($arg)
	fi
done

if [[ $# -eq 0 ]]; then
	echo "chruby-exec: COMMAND required" >&2
	exit 1
fi

exec $SHELL -l -i -c "chruby $argv && $*"
