#!/usr/bin/env bash

CHRUBY_VERSION="0.3.4"

function chruby_version_from_file() {
	local dir="$PWD"
	local version_file

	until [[ -z "$dir" ]]; do
		version_file="$dir/.ruby-version"

		if [[ -f "$version_file" ]]; then
			echo $(cat "$version_file")
			return
		fi

		dir="${dir%/*}"
	done
}

case "$1" in
	-h|--help)
		echo "usage: chruby-exec RUBY [RUBYOPTS] -- COMMAND"
		echo "   or: chruby-exec -- COMMAND"
		echo "  (in second form, will attempt to use .ruby-version file)"
		exit
		;;
	-v|--version)
		echo "chruby version $CHRUBY_VERSION"
		exit
		;;
esac

if [[ $# -eq 0 ]]; then
	echo "chruby-exec: RUBY and COMMAND required" >&2
	exit 1
fi

argv=()

for arg in $@; do
	shift

	if [[ "$arg" == "--" ]]; then break
	else                          argv+=($arg)
	fi
done

[[ ! "$argv" ]] && argv=$(chruby_version_from_file)

if [[ ! $argv ]]; then
	echo "chruby-exec: RUBY (or .ruby-version file) required" >&2
	exit 1
fi

if [[ $# -eq 0 ]]; then
	echo "chruby-exec: COMMAND required" >&2
	exit 1
fi

exec $SHELL -l -i -c "chruby $argv && $*"
